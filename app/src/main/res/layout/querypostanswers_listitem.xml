<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/querypost_firslcl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/querypostanswers_imageview"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/profile_placeholder"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/querypost_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Mayank Maurya"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@+id/querypostanswers_imageview"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/querypost_timstamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="6dp"
                    android:text="09/06/2021"
                    android:textColor="@color/grey"
                    android:textSize="10dp"
                    app:layout_constraintLeft_toRightOf="@+id/querypostanswers_imageview"
                    app:layout_constraintTop_toBottomOf="@+id/querypost_username" />
                <!--Main Post content -->
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/querypost_maincontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/querypost_asked_question"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="here is the solution of dsdsdsdsdsdwch is contunuws dsds\nffd\nfdfd\nfdfd\nfdf\nfdfd\nfdfd\nfdfd\nfdf\nfdfd\nfdf\nfdf\nfdfd"
                        android:inputType="textMultiLine"
                        android:lines="10"
                        android:maxLines="100"
                        android:minLines="10"
                        android:scrollbars="vertical"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/querypost_activitycontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center">
                <!--                    likes section                                      -->
                <TextView
                    android:id="@+id/querypost_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="20"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="3dp" />
                <Button
                    android:id="@+id/querypost_likesimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/querypost_likes"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/upvote_shape"
                    android:padding="3dp" />
                <!--                Views section                                   -->
                <TextView
                    android:id="@+id/querypost_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@id/querypost_likes"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="91"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginLeft="70dp"/>
                <ImageView
                    android:id="@+id/querypost_Viewsimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/querypost_views"
                    app:layout_constraintLeft_toRightOf="@id/querypost_likesimage"
                    android:layout_marginLeft="70dp"
                    android:src="@drawable/ic_views"
                    android:padding="3dp" />
                <!--                answers section                               -->
                <TextView
                    android:id="@+id/querypost_answers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:layout_constraintLeft_toRightOf="@id/querypost_views"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="45"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:layout_marginLeft="70dp"/>
                <ImageView
                    android:id="@+id/querypost_answersimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/querypost_answers"
                    app:layout_constraintLeft_toRightOf="@id/querypost_Viewsimage"
                    android:layout_marginLeft="70dp"
                    android:src="@drawable/ic_answers"
                    android:padding="3dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>